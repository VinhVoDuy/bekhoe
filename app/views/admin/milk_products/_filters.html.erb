<div class="row col-sm-12 form-group">
  <div class="col-sm-1"><strong>STATUS:</strong></div>
  <div class="btn-group col-sm-2">
    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%=params[:status].try(:camelize) || 'All'%>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'All', admin_milk_products_path%></li>
      <li><%= link_to 'Published', admin_milk_products_path(status: :published)%></li>
      <li><%= link_to 'Hidden', admin_milk_products_path(status: :hidden)%></li>
    </ul>
  </div>

  <div class="col-sm-1"><strong>PRICE:</strong></div>
  <div class="col-sm-1"><strong>From:</strong></div>
  <div class="col-sm-2">
    <input id="min" class= "col-sm-2 form-control"/>
  </div>
  <div class="col-sm-1"><strong>To:</strong></div>
  <div class="col-sm-2">
    <input id="max" class= "form-control"/>
  </div>
</div>

<div class="row col-sm-12 form-group">
</div>
